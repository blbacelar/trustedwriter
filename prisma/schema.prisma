generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String        @id
  name               String?
  email              String?
  stripeCustomerId   String?       @unique
  subscriptionId     String?       @unique
  subscriptionStatus String? // Should be 'free', 'active', or 'canceled'
  priceId            String?
  credits            Int? // null for subscribed users, number for free users
  lastCreditReset    DateTime?
  applications       Application[]

  @@index([stripeCustomerId])
}

model Application {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  content    String   @db.Text
  listingUrl String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ErrorLog {
  id             String   @id @default(cuid())
  userId         String?
  message        String
  stack          String?
  context        String
  additionalData String?  @db.Text
  timestamp      DateTime @default(now())
}
